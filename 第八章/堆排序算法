/*堆排序算法*/
void heapSort ( SortObject * pvector ) {
    int i,n;
   RecordNode temp ;
   n = pvector -> n ;
   for ( i = n /2-1; i >=0; i --) sift ( pvector , n , i );
   for ( i = n -1; i >0; i --)
       temp = pvector -> record [ o ];
       pvector -> record [ o ]= pvector -> record [ i ];
       pvector -> record [ i ]= temp ;
       sift ( pvector , i ,0);
   }
}
